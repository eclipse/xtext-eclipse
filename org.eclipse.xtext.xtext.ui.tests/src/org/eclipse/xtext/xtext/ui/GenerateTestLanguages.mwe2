module org.eclipse.xtext.xtext.ui.GenerateTestLanguages
import org.eclipse.xtext.xtext.generator.*
import org.eclipse.xtext.xtext.generator.model.project.*

var rootPath = ".."
var projectName = "org.eclipse.xtext.xtext.ui.tests"

Workflow {
	
	component = XtextGenerator {
		configuration = {
			project = StandardProjectConfig {
				baseName = "${projectName}"
				rootPath = rootPath
				runtime = {
					name = "${projectName}"
				}
				genericIde = {
					name = "${projectName}"
					enabled = true
				}
				eclipsePlugin = {
					name = "${projectName}"
					enabled = true
				}
				createEclipseMetaData = true
			}
			code = {
				encoding = "ISO-8859-1"
				lineDelimiter = "\n"
				fileHeader = "/*\n * generated by Xtext\n */"
				preferXtendStubs = false
			}
		}
		language = StandardLanguage {
			name = "org.eclipse.xtext.xtext.ui.ecore2xtext.Ecore2XtextTest"
			fileExtensions = "ecore2xtexttest"
			referencedResource = "platform:/resource/org.eclipse.xtext.xtext.ui.tests/src/org/eclipse/xtext/xtext/ui/ecore2xtext/Ecore2XtextTest.genmodel"
			
			fragment = ecore2xtext.Ecore2XtextValueConverterServiceFragment2 auto-inject {}

			formatter = {
				generateStub = false
			}
			
			generator = {
				generateStub = false
			}
			
			labelProvider = {
				generateStub = false
			}
			
			quickFixProvider = {
				generateStub = false
			}
			
			outline = {
				generateStub = false
			}

			serializer = {
				generateStub = false
			}
			
			scopeProvider = {
				generateStub = false
			}
			
			parserGenerator = {
				options = {
					classSplitting = true
				}
			}
			
			validator = {
				generateStub = false
			}
			junitSupport = {
				junitVersion = "4"
			}
		}
	}
}
