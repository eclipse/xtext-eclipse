module org.eclipse.xtext.builder.tests.GenerateBuilderTestLanguages

import org.eclipse.xtext.xtext.generator.*
import org.eclipse.xtext.xtext.generator.model.project.*

var rootPath = ".."

Workflow {
	
	component = XtextGenerator {
		configuration = {
			project = StandardProjectConfig {
				baseName = "org.eclipse.xtext.builder.tests"
				rootPath = rootPath
				runtimeTest = {
					enabled = false
				}
				genericIde = {
					enabled = true
					root = "${rootPath}/org.eclipse.xtext.builder.tests"
				}
				eclipsePlugin = {
					name = "org.eclipse.xtext.builder.tests"
					enabled = true
					root = "${rootPath}/org.eclipse.xtext.builder.tests"
				}
				eclipsePluginTest = {
					enabled = false
				}
				createEclipseMetaData = true
			}
			code = {
				preferXtendStubs = false
				encoding = "UTF-8"
				lineDelimiter = "\n"
				fileHeader = "/*\n * generated by Xtext\n */"
			}
		}
		language = StandardLanguage {
			name = "org.eclipse.xtext.builder.tests.BuilderTestLanguage"
			fileExtensions = "buildertestlanguage"

			serializer = {
				generateStub = false
			}
			validator = {
				// composedCheck = "org.eclipse.xtext.validation.NamesAreUniqueValidator"
			}
			quickFixProvider = {
				generateStub = false
			}
			outline = {
				generateStub = false
			}
			labelProvider = {
				generateStub = false
			}
			generator = {
				generateStub = false
			}
			scopeProvider = {
				generateStub = false
			}
		}
	}
}
